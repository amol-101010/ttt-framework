<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Login Tests Suite" parallel="methods" thread-count="4">
    <test name="Login Tests">
        <parameter name="env" value="test"/>
        <parameter name="url" value="https://www.saucedemo.com/"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="implicitWait" value="10000"/>

        <classes>
            <class name="login.LoginNegativeTests"/>
            <class name="login.LoginPositiveTests"/>
        </classes>
    </test>
</suite>